---
// Contacto.astro
---

<section id="contacto" class="py-20 relative overflow-hidden">
  <div class="absolute inset-0 z-0">
    <div class="circuit-pattern absolute inset-0 opacity-10"></div>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center">
      <div class="inline-flex items-center justify-center mb-3">
        <div class="h-px w-8 bg-cyber-green mr-3"></div>
        <span class="text-cyber-green uppercase text-sm tracking-wider font-medium">Ponte en contacto</span>
        <div class="h-px w-8 bg-cyber-green ml-3"></div>
      </div>
      <h2 class="text-3xl font-extrabold text-white sm:text-4xl neon-text">
        Contacta con Nosotros
      </h2>
      <p class="mt-4 max-w-2xl mx-auto text-xl text-cyber-text/80">
        ¿Listo para mejorar la seguridad de tu organización? Completa el formulario y nos pondremos en contacto contigo.
      </p>
    </div>

    <div class="mt-16">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
        <!-- Formulario de contacto -->
        <div class="cyber-card p-8 relative overflow-hidden">
          <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-cyber-blue via-cyber-green to-cyber-blue"></div>
          
          <!-- Mensaje de éxito - inicialmente oculto -->
          <div id="form-success" class="hidden p-6 mb-8 rounded-md bg-cyber-green/30 border-2 border-cyber-green shadow-lg shadow-cyber-green/20 animate-pulse">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-cyber-green" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-base font-medium text-cyber-green">¡Mensaje enviado correctamente! Nos pondremos en contacto contigo pronto.</p>
              </div>
            </div>
          </div>
          
          <form id="contact-form" action="https://formspree.io/f/xvgragyy" method="POST" class="space-y-6">
            <input type="hidden" name="_next" value="https://kevinxe.github.io/contacto?success=true" />
            <input type="hidden" name="_subject" value="Nuevo mensaje desde el sitio web" />
            <input type="hidden" name="_autoresponse" value="Gracias por tu mensaje. Lo hemos recibido y nos pondremos en contacto contigo pronto." />
            
            <div>
              <label for="name" class="block text-sm font-medium text-cyber-blue">Nombre completo</label>
              <div class="mt-1">
                <input type="text" name="name" id="name" autocomplete="name" required 
                  class="py-3 px-4 block w-full bg-cyber-dark/50 border border-cyber-blue/30 text-cyber-text rounded-md focus:ring-cyber-blue focus:border-cyber-blue placeholder-cyber-text/50">
              </div>
            </div>

            <div>
              <label for="company" class="block text-sm font-medium text-cyber-blue">Empresa</label>
              <div class="mt-1">
                <input type="text" name="company" id="company" autocomplete="organization" 
                  class="py-3 px-4 block w-full bg-cyber-dark/50 border border-cyber-blue/30 text-cyber-text rounded-md focus:ring-cyber-blue focus:border-cyber-blue placeholder-cyber-text/50">
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-cyber-blue">Email</label>
              <div class="mt-1">
                <input type="email" name="email" id="email" autocomplete="email" required 
                  class="py-3 px-4 block w-full bg-cyber-dark/50 border border-cyber-blue/30 text-cyber-text rounded-md focus:ring-cyber-blue focus:border-cyber-blue placeholder-cyber-text/50">
              </div>
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-cyber-blue">Teléfono</label>
              <div class="mt-1">
                <input type="tel" name="phone" id="phone" autocomplete="tel" 
                  class="py-3 px-4 block w-full bg-cyber-dark/50 border border-cyber-blue/30 text-cyber-text rounded-md focus:ring-cyber-blue focus:border-cyber-blue placeholder-cyber-text/50">
              </div>
            </div>

            <div>
              <label for="service" class="block text-sm font-medium text-cyber-blue">Servicio de interés</label>
              <div class="mt-1">
                <select id="service" name="service" 
                  class="py-3 px-4 block w-full bg-cyber-dark/50 border border-cyber-blue/30 text-cyber-text rounded-md focus:ring-cyber-blue focus:border-cyber-blue">
                  <option value="" class="bg-cyber-dark">Selecciona un servicio</option>
                  <option value="pentesting" class="bg-cyber-dark">Pentesting Profesional</option>
                  <option value="automatizacion" class="bg-cyber-dark">Automatización con IA</option>
                  <option value="consultoria" class="bg-cyber-dark">Consultoría en Ciberseguridad</option>
                  <option value="otro" class="bg-cyber-dark">Otro</option>
                </select>
              </div>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-cyber-blue">Mensaje</label>
              <div class="mt-1">
                <textarea id="message" name="message" rows="4" required
                  class="py-3 px-4 block w-full bg-cyber-dark/50 border border-cyber-blue/30 text-cyber-text rounded-md focus:ring-cyber-blue focus:border-cyber-blue placeholder-cyber-text/50"></textarea>
              </div>
            </div>

            <!-- Campo oculto para evitar spam -->
            <input type="text" name="_gotcha" style="display:none" />

            <div>
              <button type="submit" id="submit-button" class="gradient-btn w-full inline-flex items-center justify-center px-6 py-3 text-base font-medium">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z" />
                </svg>
                <span id="submit-text">Enviar Mensaje</span>
              </button>
            </div>
          </form>
        </div>

        <!-- Información de contacto -->
        <div class="cyber-card p-8 relative overflow-hidden terminal">
          <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-cyber-green via-cyber-blue to-cyber-green"></div>
          <h3 class="text-xl font-bold mb-6 text-cyber-green font-['Orbitron']">Información de Contacto</h3>
          
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="flex items-center justify-center h-10 w-10 rounded-md border border-cyber-green/30 bg-cyber-dark/80 text-cyber-green">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
              </div>
              <div class="ml-3">
                <p class="text-lg text-cyber-text">+34 900 123 456</p>
                <p class="text-cyber-text/60">Lunes a Viernes, 9:00 - 18:00</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="flex items-center justify-center h-10 w-10 rounded-md border border-cyber-blue/30 bg-cyber-dark/80 text-cyber-blue">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
              </div>
              <div class="ml-3">
                <p class="text-lg text-cyber-text">info@secureai.com</p>
                <p class="text-cyber-text/60">Respuesta en 24-48 horas</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="flex items-center justify-center h-10 w-10 rounded-md border border-cyber-purple/30 bg-cyber-dark/80 text-cyber-purple">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
              </div>
              <div class="ml-3">
                <p class="text-lg text-cyber-text">Calle Seguridad Digital, 123</p>
                <p class="text-cyber-text/60">28001, Madrid, España</p>
              </div>
            </div>
          </div>

          <div class="mt-8 pt-6 border-t border-cyber-blue/20">
            <h4 class="text-lg font-semibold mb-4 text-cyber-blue font-['Orbitron']">Síguenos</h4>
            <div class="flex space-x-4">
              <a href="#" class="text-cyber-blue/70 hover:text-cyber-blue transition-colors duration-300 relative group">
                <span class="sr-only">LinkedIn</span>
                <div class="absolute -inset-2 bg-cyber-blue/10 scale-0 rounded-full transition-all duration-300 group-hover:scale-100"></div>
                <svg class="h-6 w-6 relative" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </a>
              <a href="#" class="text-cyber-blue/70 hover:text-cyber-blue transition-colors duration-300 relative group">
                <span class="sr-only">Twitter</span>
                <div class="absolute -inset-2 bg-cyber-blue/10 scale-0 rounded-full transition-all duration-300 group-hover:scale-100"></div>
                <svg class="h-6 w-6 relative" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723 10.054 10.054 0 01-3.127 1.184 4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
              <a href="#" class="text-cyber-blue/70 hover:text-cyber-blue transition-colors duration-300 relative group">
                <span class="sr-only">GitHub</span>
                <div class="absolute -inset-2 bg-cyber-blue/10 scale-0 rounded-full transition-all duration-300 group-hover:scale-100"></div>
                <svg class="h-6 w-6 relative" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
                </svg>
              </a>
            </div>
          </div>
          
          <!-- Terminal-like decoration -->
          <div class="mt-8 pt-4 border-t border-cyber-blue/20">
            <div class="flex items-center text-cyber-green font-mono text-xs">
              <span class="mr-2">$</span>
              <span class="typing" style="animation-duration: 3s;">connect --secure --channel=encrypted</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Decorative elements -->
    <div class="absolute -bottom-8 left-1/2 transform -translate-x-1/2 w-1/2 h-px bg-gradient-to-r from-transparent via-cyber-blue/50 to-transparent"></div>
  </div>
</section> 

<script>
  // Script para manejar el formulario y mostrar mensaje de éxito
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const formSuccess = document.getElementById('form-success');
    const submitButton = document.getElementById('submit-button') as HTMLButtonElement;
    const submitText = document.getElementById('submit-text');
    const formContainer = form ? form.parentElement : null;
    
    // Función para limpiar manualmente todos los campos del formulario
    function limpiarFormulario() {
      if (!form) return;
      
      try {
        // Limpiar directamente cada campo por ID
        const nameInput = document.getElementById('name') as HTMLInputElement;
        const companyInput = document.getElementById('company') as HTMLInputElement;
        const emailInput = document.getElementById('email') as HTMLInputElement;
        const phoneInput = document.getElementById('phone') as HTMLInputElement;
        const serviceSelect = document.getElementById('service') as HTMLSelectElement;
        const messageTextarea = document.getElementById('message') as HTMLTextAreaElement;
        
        if (nameInput) nameInput.value = '';
        if (companyInput) companyInput.value = '';
        if (emailInput) emailInput.value = '';
        if (phoneInput) phoneInput.value = '';
        if (messageTextarea) messageTextarea.value = '';
        if (serviceSelect) serviceSelect.selectedIndex = 0;
        
        // También limpiar por selector como respaldo
        const textInputs = form.querySelectorAll('input[type="text"], input[type="email"], input[type="tel"]');
        textInputs.forEach((element) => {
          const input = element as HTMLInputElement;
          input.value = '';
        });
        
        // Limpiar textareas
        const textareas = form.querySelectorAll('textarea');
        textareas.forEach((element) => {
          const textarea = element as HTMLTextAreaElement;
          textarea.value = '';
        });
        
        // Restablecer selects al valor por defecto
        const selects = form.querySelectorAll('select');
        selects.forEach((element) => {
          const select = element as HTMLSelectElement;
          select.selectedIndex = 0;
        });
        
        console.log("Formulario limpiado manualmente");
      } catch (e) {
        console.error("Error al limpiar el formulario:", e);
        
        // Solución drástica: recrear el formulario
        if (formContainer && form) {
          try {
            // Clonar el formulario pero vacío
            const nuevoFormulario = form.cloneNode(true) as HTMLFormElement;
            
            // Limpiar todos los campos del clon
            const inputsNuevos = nuevoFormulario.querySelectorAll('input:not([type="hidden"]), textarea, select');
            inputsNuevos.forEach((el) => {
              if (el instanceof HTMLInputElement || el instanceof HTMLTextAreaElement) {
                el.value = '';
              } else if (el instanceof HTMLSelectElement) {
                el.selectedIndex = 0;
              }
            });
            
            // Reemplazar el formulario
            formContainer.replaceChild(nuevoFormulario, form);
            
            console.log("Formulario recreado como solución alternativa");
            
            // Reestablecer listener para el nuevo formulario
            const nuevoBoton = nuevoFormulario.querySelector('#submit-button') as HTMLButtonElement;
            const nuevoTexto = nuevoFormulario.querySelector('#submit-text');
            
            if (nuevoBoton && nuevoTexto) {
              nuevoFormulario.addEventListener('submit', function() {
                localStorage.setItem('formSubmitted', 'true');
                nuevoBoton.disabled = true;
                nuevoTexto.textContent = 'Enviando...';
              });
            }
          } catch (cloneError) {
            console.error("Error al recrear el formulario:", cloneError);
          }
        }
      }
    }
    
    if (form && formSuccess && submitButton && submitText) {
      // Observar cambios en el mensaje de éxito
      // Cuando se vuelve visible, limpiar el formulario
      const observer = new MutationObserver(function(mutations) {
        mutations.forEach(function(mutation) {
          if (mutation.type === 'attributes' && 
              mutation.attributeName === 'class' && 
              !formSuccess.classList.contains('hidden')) {
            console.log("Observer detectó mensaje de éxito visible, limpiando formulario");
            setTimeout(() => {
              form.reset();
              limpiarFormulario();
            }, 100);
          }
        });
      });
      
      observer.observe(formSuccess, { attributes: true });
      
      // Si hay un parámetro 'success' en la URL, mostrar mensaje de éxito
      const urlParams = new URLSearchParams(window.location.search);
      const successParam = urlParams.get('success');
      
      console.log("URL params:", window.location.search);
      console.log("Success param:", successParam);
      
      // Verificar el parámetro success en la URL o en localStorage
      if (successParam === 'true' || localStorage.getItem('formSubmitted') === 'true') {
        console.log("Mostrando mensaje de éxito");
        
        // Intentar limpiar el formulario inmediatamente
        form.reset();
        limpiarFormulario();
        
        // Y también después de un breve retraso para asegurar que funciona
        setTimeout(() => {
          form.reset();
          limpiarFormulario();
        }, 500);
        
        // Mostrar mensaje de éxito
        formSuccess.classList.remove('hidden');
        
        // Hacer que deje de parpadear después de unos segundos
        setTimeout(() => {
          formSuccess.classList.remove('animate-pulse');
        }, 3000);
        
        // Limpiar el localStorage después de mostrar el mensaje
        if (localStorage.getItem('formSubmitted') === 'true') {
          localStorage.removeItem('formSubmitted');
        }
        
        // Scroll al mensaje de éxito
        setTimeout(() => {
          formSuccess.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }, 500);
      } else {
        console.log("No se detectó éxito en la URL ni en localStorage");
      }
      
      // Antes de enviar el formulario
      form.addEventListener('submit', function() {
        // Guardar en localStorage que el formulario se envió
        localStorage.setItem('formSubmitted', 'true');
        // Deshabilitar botón y cambiar texto
        submitButton.disabled = true;
        submitText.textContent = 'Enviando...';
      });
    } else {
      console.log("Algún elemento no fue encontrado:", {
        form: !!form,
        formSuccess: !!formSuccess,
        submitButton: !!submitButton,
        submitText: !!submitText
      });
    }
  });
</script> 